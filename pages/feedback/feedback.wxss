Page {
  background: #edeeec;
}
.fd_main {
  padding: 20rpx;
  color: #666;
}
.fd_main .tips {
  display: flex;
  flex-wrap: wrap;
}
.fd_main .tips text {
  width: 30%;
  padding: 10rpx;
  text-align: center;
  background-color: #fdfefd;
  margin: 20rpx 10rpx;
}
.fd_main .fd_content {
  background: #fdfefd;
}
.fd_main .fd_content textarea {
  padding: 10rpx;
}
.fd_main .fd_content .fd_tools {
  display: flex;
  flex-wrap: wrap;
  text-align: left;
  padding-bottom: 20rpx;
}
.fd_main .fd_content .fd_tools button {
  width: 90rpx;
  height: 90rpx;
  background: #f6f7f6;
  font-size: 60rpx;
  color: #ccc;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.fd_main .fd_content .fd_tools .up_img_item {
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.fd_main .form_btn_wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.fd_main .form_btn_wrap button {
  background: #e64340;
  color: #fff;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
